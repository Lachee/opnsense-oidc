<model>
    <mount>//OPNsense/Oidc</mount>
    <description>OpenID Connect Authentication Settings</description>
    <version>1.0.0</version>
    <items>
        <general>
            <enabled type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </enabled>
            <provider_url type="TextField">
                <mask>/^https?:\/\/.+/</mask>
                <ValidationMessage>Please enter a valid OIDC provider URL</ValidationMessage>
                <Required>Y</Required>
            </provider_url>
            <client_id type="TextField">
                <mask>/^[a-zA-Z0-9_-]+$/</mask>
                <ValidationMessage>Client ID contains invalid characters</ValidationMessage>
                <Required>Y</Required>
            </client_id>
            <client_secret type="TextField">
                <mask>/^.+$/</mask>
                <Required>Y</Required>
            </client_secret>
            <scopes type="TextField">
                <default>openid profile email</default>
                <mask>/^[a-zA-Z0-9_ ]+$/</mask>
                <ValidationMessage>Scopes contain invalid characters</ValidationMessage>
                <Required>Y</Required>
            </scopes>
            <admin_group type="TextField">
                <mask>/^[a-zA-Z0-9_-]*$/</mask>
                <ValidationMessage>Group name contains invalid characters</ValidationMessage>
                <Required>N</Required>
            </admin_group>
            <user_group type="TextField">
                <mask>/^[a-zA-Z0-9_-]*$/</mask>
                <ValidationMessage>Group name contains invalid characters</ValidationMessage>
                <Required>N</Required>
            </user_group>
            <auto_create_users type="BooleanField">
                <default>1</default>
                <Required>N</Required>
            </auto_create_users>
            <debug_logging type="BooleanField">
                <default>0</default>
                <Required>N</Required>
            </debug_logging>
            <session_timeout type="IntegerField">
                <default>3600</default>
                <MinimumValue>300</MinimumValue>
                <MaximumValue>86400</MaximumValue>
                <Required>Y</Required>
            </session_timeout>
        </general>
    </items>
</model>